                          </li>
                        </ul>
                      </div>
                    </div>
                </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="session">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">EMAIL</th>
                    <th scope="col">TÊN</th>
                    <th scope="col">CHỨC VỤ</th>
                    <th scope="col">SĐT</th>
                </tr>
            </thead>
            <tbody>
                    <%for(var i=0; i < data.length; i++){%>
                <tr>
                    <td><%= i+1 %></td>
                    <td><%= data[i].email %></td>
                    <td><%= data[i].name %></td>
                    <td><%= data[i].role %></td>
                    <td><%= data[i].phone %></td>
                    <td><a href="<%= process.env.API %>/user/delete/<%= data[i].id%>"><button type="button" class="btn btn-primary">Xoá bỏ</button></a> </td>
                </tr>
                    <%}%>
            </tbody>
        </table>
    </div>
